<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBA99F4"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/exampleTemplate"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="26dp"
        android:text="a * x1 + b * x2 + c * x3 + d * x4 = y"
        android:textColor="#3F51B5"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/popLabel"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="46dp"
            android:text="population = "
            android:textColor="#3F51B5"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/popInput"
            android:layout_width="59dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="92dp"
            android:layout_marginBottom="36dp"
            android:ems="10"
            android:gravity="center"
            android:hint="p"
            android:inputType="number"
            android:textColor="#673AB7"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/yLabel"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="46dp"
            android:text="y = "
            android:textColor="#3F51B5"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/yInput"
            android:layout_width="78dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="92dp"
            android:layout_marginBottom="36dp"
            android:ems="10"
            android:gravity="center"
            android:hint="y"
            android:inputType="number"
            android:textColor="#673AB7"
            android:textSize="24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/aLabel"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="46dp"
            android:text="a = "
            android:textColor="#3F51B5"
            android:textSize="24dp" />


        <EditText
            android:id="@+id/aInput"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="92dp"
            android:layout_marginBottom="36dp"
            android:ems="10"
            android:gravity="center"
            android:hint="a"
            android:inputType="number"
            android:textColor="#673AB7"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/bLabel"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="46dp"
            android:text="b = "
            android:textColor="#3F51B5"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/bInput"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="92dp"
            android:layout_marginBottom="36dp"
            android:ems="10"
            android:gravity="center"
            android:hint="b"
            android:inputType="number"
            android:textColor="#673AB7"
            android:textSize="24dp" />


        <TextView
            android:id="@+id/cLabel"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="46dp"
            android:text="c = "
            android:textColor="#3F51B5"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/cInput"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="92dp"
            android:layout_marginBottom="36dp"
            android:ems="10"
            android:gravity="center"
            android:hint="c"
            android:inputType="number"
            android:textColor="#673AB7"
            android:textSize="24dp" />


        <TextView
            android:id="@+id/dLabel"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="46dp"
            android:text="d = "
            android:textColor="#3F51B5"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/dInput"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="92dp"
            android:layout_marginBottom="36dp"
            android:ems="10"
            android:gravity="center"
            android:hint="d"
            android:inputType="number"
            android:textColor="#673AB7"
            android:textSize="24dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/errorField"
        android:layout_width="363dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="26dp"
        android:textColor="#B73A6C"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/x1"
        android:layout_width="357dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:textColor="#673AB7"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/x2"
        android:layout_width="357dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:textColor="#673AB7"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/x3"
        android:layout_width="357dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:textColor="#673AB7"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/x4"
        android:layout_width="357dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#673AB7"
        android:layout_marginBottom="26dp"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/calcTime"
        android:layout_width="357dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="#673AB7"
        android:layout_marginBottom="10dp"
        android:textSize="25dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/calculateBtn"
        android:layout_width="263dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="Calculate"
        android:textColor="#FFFFFF"
        android:textSize="23dp"
        app:backgroundTint="#673AB7" />

</LinearLayout>